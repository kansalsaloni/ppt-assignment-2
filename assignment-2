        cin >> nums[i];
    }
unordered_set<int> set;
    for (int i = 0; i < nums.size(); i++) {

        if (set.find(nums[i]!=set.end()) {
          result=true;
          break;
        }
    set.insert(num[i]);
    }
cout<<result;

return 0;
}

OUTPUT:
